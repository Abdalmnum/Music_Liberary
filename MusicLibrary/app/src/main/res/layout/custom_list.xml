<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/singer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_singer"
        android:layout_width="60dp"

        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/baseline_audiotrack_black_18dp" />

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="0dp"
        android:textFontWeight="bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/singer_desc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singer_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="13dp"
        android:textFontWeight="italic"
        android:textSize="10sp" />

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="55dp"
        android:src="@mipmap/baseline_play_circle_filled_black_18dp" />

    <ImageButton
        android:id="@+id/btn_pause"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@mipmap/baseline_pause_circle_filled_black_18dp" />
</RelativeLayout>
